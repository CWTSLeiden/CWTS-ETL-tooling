setlocal

call %~1 "%~2"

goto:eof


:: =======================================================================================
:verbose
:: =======================================================================================
set message=%~1
if "%verbose%" == "true" (
    call :yellow "verbose: %message%"
)
goto:eof
:: =======================================================================================


:: =======================================================================================
:error
:: =======================================================================================
set message=%~1
    call :red "verbose: %message%"
goto:eof
